<%- include('includes/header'); -%>
    <%- include('includes/nav'); -%>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3 ">
                    <h1 class="display-1 text-center">Contacto</h1>
                    <p class="text-center lead">Crie ou edite os seus contactos</p>
                    <%- include('includes/messages'); -%>
                        <% if(contacto._id){ %>
                            <form action="/contacto/edit/<%=contacto._id %>" method="post">
                                <%} else{%>
                                    <form action="/contacto/register" method="post">
                                        <% } %>
                                            <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                            <div class="form-group my-3">
                                                <label>Nome</label>
                                                <input value="<%=contacto.nome%>" type="text" class="form-control"
                                                    id="nome" aria-describedby="emailHelp" placeholder="Digite o nome"
                                                    name="nome">
                                            </div>
                                            <div class="form-group my-3">
                                                <label>Sobrenome</label>
                                                <input value="<%=contacto.sobrenome%>" type="text" class="form-control"
                                                    id="sobrenome" aria-describedby="emailHelp"
                                                    placeholder="Digite o sobrenome" name="sobrenome">
                                            </div>
                                            <div class="form-group my-3">
                                                <label>Telefone</label>
                                                <input type="tel" value="<%=contacto.telefone%>" class="form-control"
                                                    id="telefone" aria-describedby="emailHelp"
                                                    placeholder="Digite o nÃºmero de telefone" name="telefone">
                                            </div>
                                            <div class="form-group my-3">
                                                <label>E-mail</label>
                                                <input type="email" value="<%=contacto.email%>" class="form-control"
                                                    id="exampleInputEmail1" aria-describedby="emailHelp"
                                                    placeholder="Digite o seu e-mail" name="email">
                                            </div>
                                            <button type="submit" class="btn my-1 btn-primary">Salvar</button>
                                    </form>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer'); -%>